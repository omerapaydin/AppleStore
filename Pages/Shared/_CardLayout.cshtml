@if(TempData["message"] != null) {
<div class="mt-5 alert alert-warning">@TempData["message"]</div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apple</title>
    <link rel="stylesheet" href="/css/main.css">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/main.css">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" >

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
    />
          @RenderSection("Script", required: false)
          @RenderSection("NewCss", required: false)
    

</head>
<body>
         <nav style=" position: fixed;
        width: 100%;
        z-index: 1;
        top: 0;" class="navbar navbar-expand-lg navbar-light mb-5">
            <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="/Home/Index">
          <i class="fab fa-apple"></i>  Apple
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">

            @RenderSection("Search", required: false) 


              <ul class="navbar-nav ms-auto me-3">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Index">
                    </i> Ana Sayfa
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/List">
                    </i> Ürünler
                </a>
            </li>

            @if(User.Identity?.IsAuthenticated ?? false)
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Cart">
                         Sepetim
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Home/Profile">
                         @User.Identity.Name
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Account/Logout">
                        Çıkış Yap
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Create">
                         Üye Ol
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Login">
                        Giriş Yap
                    </a>
                </li>
            }
        </ul>
                </div>
              </div>
            </nav>

    
      @if (ViewData["NoContainer"] as bool? == true)
      {
          @RenderBody()
      }
      else
      {
          <div class="container" style="margin-top: 70px;">
              @RenderBody()
          </div>
      }



      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>