    ViewData["NoContainer"] = true;
}  
  
  
  <main>
      <section class="container1">
        <h1>iPhone 17 Pro</h1>
        <h4>Görülmemiş incelikte.</h4>
        <img src="~/img/apple.jpg" alt="" />
      </section>
      <section class="container2">
        <h1>18MP Center Stage ön kamera.</h1>
        <h2>Kadrajınızdan kaçmayacak yenilikler.</h2>
