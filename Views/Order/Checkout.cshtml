@model AppleStore.Models.OrderModel

<div class="row mt-5">
    <div class="col-md-8">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <h4 class="mb-3"><i class="bi bi-receipt"></i> Sipariş Detayı</h4>
                <hr>

                <div asp-validation-summary="All" class="text-danger"></div>
                <form method="post" asp-action="Checkout">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control">
                    </div>

                    <div class="row mb-3">
                        <div class="col">
                            <label asp-for="City" class="form-label fw-semibold"></label>
                            <input asp-for="City" class="form-control">
                        </div>
                        <div class="col">
                            <label asp-for="Phone" class="form-label fw-semibold"></label>
                            <input asp-for="Phone" class="form-control">
                        </div>
                        <div class="col">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" class="form-control">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="AddressLine" class="form-label fw-semibold"></label>
                        <textarea asp-for="AddressLine" class="form-control"></textarea>
                    </div>

                    <h4 class="my-3"><i class="bi bi-credit-card"></i> Ödeme Bilgileri</h4>
                    <div class="card p-3 border border-primary rounded-3 mb-4 bg-light">
                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="CartName" class="form-label">Name Surname</label>
                                <input asp-for="CartName" class="form-control" placeholder="Örn: Ahmet Yılmaz">
                            </div>
                            <div class="col">
                                <label asp-for="CartNumber" class="form-label">Card Numbers</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-credit-card-2-front"></i></span>
                                    <input asp-for="CartNumber" class="form-control" placeholder="1234 5678 9012 3456">
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="ExpirationMonth" class="form-label">Mounth</label>
                                <input asp-for="ExpirationMonth" class="form-control" placeholder="MM">
                            </div>
                            <div class="col">
                                <label asp-for="ExpirationYear" class="form-label">Year</label>
                                <input asp-for="ExpirationYear" class="form-control" placeholder="YY">
                            </div>
                            <div class="col">
                                <label asp-for="Cvc" class="form-label">CVC</label>
                                <div class="input-group">
                                    <input asp-for="Cvc" class="form-control" placeholder="***">
                                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn custom-btn w-100 py-2 fs-5">
                        <i class="bi bi-shield-check"></i> Ödemeyi Tamamla
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h4 class="mb-3"><i class="bi bi-bag-check"></i> Sipariş Özeti</h4>
                <ul class="list-group mb-3">
                    @foreach (var item in Model.Cart.Items)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="my-0">@item.Product.Title x @item.Quantity</h6>
                            </div>
                            <span>@(item.Product.Price?.ToString("c") ?? "0.00")</span>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between">
                        <span class="fw-bold">Toplam:</span>
                        <strong class="text-warning">@Model?.Cart?.CalculateTotal().ToString("c")</strong>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>