@model ResetPasswordModel

<div class="container d-flex justify-content-center align-items-center min-vh-50 py-3">
  <div class="login-card w-50">
    <div class="logo">
      <h3>Şifre Sıfırla</h3>
    </div>

    <form asp-action="ResetPassword" method="post">
      <div asp-validation-summary="All" class="text-danger"></div>
      <input type="hidden" asp-for="Token" />

      <div class="mb-3">
        <input
          asp-for="Email"
          type="email"
          class="form-control"
          placeholder="Email"
          required
        />
      </div>

      <div class="mb-3">
        <input
          asp-for="Password"
          type="password"
          class="form-control"
          placeholder="Yeni Şifre"
          required
        />
      </div>

      <div class="mb-3">
        <input
          asp-for="ConfirmPassword"
          type="password"
          class="form-control"
          placeholder="Şifre Tekrar"
          required
        />
      </div>

      <div class="mb-4">
        <button type="submit" class="btn custom-btn btn-block w-100">
          Şifreyi Sıfırla
        </button>
      </div>
    </form>
  </div>
</div>

@section NewCss {
  <link rel="stylesheet" href="/css/Login.css">
}